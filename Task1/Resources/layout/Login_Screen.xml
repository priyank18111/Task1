<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Login"
         android:id="@+id/name"
        android:textSize="50dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="50dp"
        android:textColor="#5B0BAA"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:textColor="#000000"
            android:text="Don't have an account?"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/createaccounttext"
            android:layout_marginLeft="5dp"
            android:textColor="#F6416C"
            android:text="Create your account"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="40dp"
            
            android:id="@+id/emailcontainer"
            app:layout_constraintTop_toBottomOf="@+id/space111"
            android:layout_marginTop="70dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_height="wrap_content">
            <EditText
                 android:imeOptions="actionNext"
                android:layout_width="match_parent"
                android:hint="Enter Username"
                android:drawablePadding="10dp"
               android:inputType="text"
                android:textColorHint="@color/material_grey_600"
                android:drawableLeft="@drawable/user"
                android:drawableTint="@color/material_grey_600"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="40dp"
                android:layout_height="wrap_content"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="40dp"
            android:id="@+id/passwordcontainer"
            app:layout_constraintTop_toBottomOf="@+id/space111"
            android:layout_marginTop="10dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_height="wrap_content">
            <EditText
                android:layout_width="match_parent"
                android:hint="Enter Password"
                
               android:inputType="textPassword"
                android:drawablePadding="10dp"
                android:textColorHint="@color/material_grey_600"
                android:drawableLeft="@drawable/password"
                android:drawableTint="@color/material_grey_600"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="40dp"
                android:layout_height="wrap_content"/>
        </com.google.android.material.textfield.TextInputLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:layout_marginLeft="228dp"
            android:layout_marginTop="7dp"
            android:text="Forget Password?"
            android:id="@+id/forget" />
    </LinearLayout>
    <com.google.android.material.button.MaterialButton
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/space222"
        android:text="Login"
        android:layout_marginLeft="95dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="95dp"
        app:cornerRadius="50dp"
        android:backgroundTint="#1C58EE"
        android:elevation="10px"
        android:id="@+id/loginbutton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <com.google.android.material.button.MaterialButton
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/space222"
        android:text="Register"
        android:elevation="50dp"
        android:layout_marginLeft="95dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="95dp"
        app:cornerRadius="50dp"
        android:backgroundTint="#1C58EE"
        android:id="@+id/registerbutton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="or Login with"
        android:textSize="17dp"
        android:layout_marginTop="30dp"
        android:textColor="#000000"
        android:layout_gravity="center"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="7dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_height="40dp"
            android:layout_width="50dp"
            android:id="@+id/facebook"
            android:gravity="center_horizontal"
            android:src="@drawable/facebook"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true">
        </ImageView>


        <ImageView
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="50dp"
            
            android:layout_marginTop="30dp"
            android:layout_marginLeft="3dp"
            android:id="@+id/google"
            android:src="@drawable/google"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true">
        </ImageView>

    </LinearLayout>

</LinearLayout>