<?xml version="1.0" encoding="utf-8" ?> 
    <LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Register"
        android:textSize="35dp"
        android:textStyle="bold"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="60dp"
        android:textColor="#5B0BAA"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:textColor="#000000"
            android:text="Don't have an account?"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:textColor="#F6416C"
            android:text="Log In"
            android:id="@+id/Loginbtn"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="30dp"
        android:orientation="vertical"
        android:layout_height="323.6dp">
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="40dp"
            app:boxCornerRadiusTopStart="7dp"
            app:boxCornerRadiusTopEnd="7dp"
            app:boxCornerRadiusBottomEnd="7dp"
            app:boxCornerRadiusBottomStart="7dp"
            android:imeOptions="actionNext"
            android:inputType="text"
            android:layout_marginTop="30dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_height="wrap_content">
            <EditText
                android:layout_width="match_parent"
                android:hint="Enter Name of User"
                android:inputType="text"
                android:drawablePadding="15dp"
                android:id="@+id/nameEdittext"
                android:textColorHint="@color/material_grey_600"
                android:drawableLeft="@drawable/user"
                android:drawableTint="@color/material_grey_600"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="40dp"
                android:layout_height="50dp"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="40dp"
            app:boxCornerRadiusTopStart="7dp"
            app:boxCornerRadiusTopEnd="7dp"
            app:boxCornerRadiusBottomEnd="7dp"
            app:boxCornerRadiusBottomStart="7dp"
            android:layout_marginTop="5dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_height="wrap_content"
            tools:ignore="UnresolvedResource">
            <EditText
                android:layout_width="match_parent"
                android:hint="Enter Email Address"
                android:inputType="textEmailAddress"
                android:imeOptions="actionNext"
                android:id="@+id/emailEdittext"
                android:drawablePadding="15dp"
                android:textColorHint="@color/material_grey_600"
                android:drawableLeft="@drawable/email"
                android:drawableTint="@color/material_grey_600"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="40dp"
                android:layout_height="50dp"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="40dp"
            app:boxCornerRadiusTopStart="7dp"
            app:boxCornerRadiusTopEnd="7dp"
            app:boxCornerRadiusBottomEnd="7dp"
            app:boxCornerRadiusBottomStart="7dp"
            android:layout_marginTop="5dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_height="wrap_content"
            tools:ignore="UnresolvedResource">
            <EditText
                android:layout_width="match_parent"
                android:hint="Enter Username"
                android:inputType="text"
                android:id="@+id/usernameEdittext"
                android:imeOptions="actionNext"
                android:drawablePadding="15dp"
                android:textColorHint="@color/material_grey_600"
                android:drawableLeft="@drawable/user"
                android:drawableTint="@color/material_grey_600"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="40dp"
                android:layout_height="50dp"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="40dp"
            app:boxCornerRadiusTopStart="7dp"
            app:boxCornerRadiusTopEnd="7dp"
            app:boxCornerRadiusBottomEnd="7dp"
            app:boxCornerRadiusBottomStart="7dp"
            android:layout_marginTop="5dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_height="wrap_content">
            <EditText
                android:layout_width="match_parent"
                android:hint="Enter Password"
                android:inputType="textPassword"
                android:imeOptions="actionDone"
                android:fontFamily="sans-serif"
                android:id="@+id/passwordEdittext"
                android:drawablePadding="15dp"
                android:textColorHint="@color/material_grey_600"
                android:drawableStart="@drawable/password"
                android:drawableTint="@color/material_grey_600"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="40dp"
                android:layout_height="50dp"/>
        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>
     <com.google.android.material.button.MaterialButton
        android:text="Register"
        android:textSize="20dp"
        android:layout_marginLeft="95dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="95dp"
        android:elevation="30dp"
        android:textAllCaps="false"
        app:cornerRadius="50dp"
        android:backgroundTint="#1C58EE"
        android:id="@+id/registerbutton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="or Register with"
        android:textSize="17dp"
        android:layout_marginTop="35dp"
        android:textColor="#000000"
        android:layout_gravity="center"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_height="40dp"
            android:layout_width="50dp"
            android:id="@+id/facebook"
            android:gravity="center_horizontal"
            android:src="@drawable/facebook"
>
        </ImageView>
       <ImageView
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="50dp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="3dp"
            android:id="@+id/google"
            android:src="@drawable/google"
></ImageView>

    </LinearLayout>
</LinearLayout>